<%- if controller_name != 'sessions' %>
  <p><%= link_to "Log in", new_session_path(resource_name) %></p>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="mb-0 d-lg-none d-xl-none">Not a User? <%= link_to "Sign up", new_registration_path(resource_name), class:'d-lg-none d-xl-none' %></p>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p><%= link_to "Forgot password?", new_password_path(resource_name) %></p>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %></p>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <p><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %></p>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
  <div class="dropdown-divider"></div>
  <p class="font-weight-bold h6">Or</p>
  <p>
    <%= link_to omniauth_authorize_path(resource_name, provider),class: 'btn facebook-btn rounded-pill form-control form-control-lg font-weight-bold', method: :post do %>
      <%= fa_icon "facebook", text: "&nbsp; Sign in with #{OmniAuth::Utils.camelize(provider)}".html_safe %>
    <% end %>
  </p>
  <% end %>
<% end %>
