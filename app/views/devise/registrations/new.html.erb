<div class="row vh-100">

  <!-- The left half -->
  <div class="col-md-7 my-auto">
    <div class="signup shadow rounded py-4 bg-light mx-4">
      <div class="col-lg-10 mx-auto">
        <p class="h2 header-font">Welcome to <span class="h1 text-primary">Devium</span></p>
        <p class="lead">Let's get you all set up so you can meet other amazing devs.</p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.text_field :username, placeholder: "Username", autocomplete: "username", autofocus: true, class: 'form-control rounded-pill border-0 shadow-sm px-4' %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, placeholder: "Email", autocomplete: "email", class: 'form-control rounded-pill border-0 shadow-sm px-4' %>
          </div>
          
          <div class="profile-fields date row">
            <%= f.fields_for :profile do |profile_form| %>
              
              <div class="form-group col-md-6 col-md">
                <%= profile_form.text_field :first_name, placeholder: "First Name", class: 'form-control rounded-pill border-0 shadow-sm px-4' %>
              </div>

              <div class="form-group  col-md-6 col-md">
                <%= profile_form.text_field :last_name, placeholder: "Last Name", class: 'form-control rounded-pill border-0 shadow-sm px-4' %>
              </div>
            <% end %>
          </div>

          <div class="form-group">
            <% if @minimum_password_length %>
              <%= f.password_field :password, placeholder: "Password (#{@minimum_password_length} characters minimum)", autocomplete: "new-password", class: 'form-control rounded-pill border-0 shadow-sm px-4' %>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "new-password", class: 'form-control rounded-pill border-0 shadow-sm px-4' %>
          </div>


          <div class="actions form-group">
            <%= f.submit "Sign up", class: 'mt-4 btn btn-primary text-uppercase mb-2 rounded-pill shadow-sm form-control font-weight-bold' %>
          </div>
          <p>Already have an account? <%= link_to "Sign in", new_user_session_path %></p>
          
          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
            <div class="dropdown-divider"></div>
            <p class="font-weight-bold h6 text-center">Or</p>
            <p>
              <%= link_to omniauth_authorize_path(resource_name, provider),class: 'btn facebook-btn rounded-pill form-control form-control-lg font-weight-bold' do %>
                <%= fa_icon "facebook", text: "&nbsp; Sign up with #{OmniAuth::Utils.camelize(provider)}".html_safe %>
              <% end %>
            </p>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

  </div><!-- end -->

  <!-- The right half -->
  <div class="bg-sign-up col-md-5 d-none d-md-block">
  </div><!-- end -->

</div>