<div class="user-profile-box">

  <div class="user-avatar">
    <%= avatar(@user, :x_large) %>
  </div>

  <h1 class='username'>
    <%= @user.username %>
  </h1>

  <div class="friends-details">
    <p><%= @user.friendships_count %> <%= link_to "Friends", friends_user_path(@user) %></p>
  </div>

  <div class="edit-profile-button">
    <%= edit_profile_button(@user) %>
  </div>

  <div class="friendship_button">
    <%= friendship_button(@user) %>
  </div>

  <div class="profile-details">
    <p class="full-name">
      <%= name_details(@user) %>
    </p>

    <p class="about-me">
      Bio: <%= @user.profile.about_me %>
    </p>

    <p class="date-of-birth">
      <%= @user.profile.date_of_birth.strftime("%B %d, %Y") %>
    </p>

    <p class="gender">
      <%= @user.profile.gender.capitalize %>
    </p>
  </div>


</div>

<div class="all-posts">
  <%= render @posts %>
</div>

